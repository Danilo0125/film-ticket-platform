<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Administración</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/79cf3b5d9a.js" crossorigin="anonymous"></script>
    <link href="~/css/admin.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 admin-sidebar">
                <div class="d-flex align-items-center mb-4 ps-3">
                    <i class="fas fa-film fa-2x me-2"></i>
                    <h4 class="mb-0">CinéAdmin</h4>
                </div>
                
                <ul class="nav flex-column admin-nav ps-3 pe-3">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "AdminUsuarios" ? "active" : "")" href="@Url.Action("AdminUsuarios", "Usuario")">
                            <i class="fas fa-users"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "AdminPelis" ? "active" : "")" href="@Url.Action("AdminPelis", "Pelicula")">
                            <i class="fas fa-film"></i> Películas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Horarios" ? "active": "")" href="@Url.Action("Index", "Horarios")">
                            <i class="fas fa-clock"></i> Horarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Tickets" ? "active": "")" href="@Url.Action("Index", "Tickets")">
                            <i class="fas fa-ticket-alt"></i> Tickets
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"].ToString() == "Reportes" ? "active" : "")" href="#" id="reportesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-chart-bar"></i> Reportes
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="reportesDropdown">
                            <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"].ToString() == "ReportePelisGanancia" ? "active" : "")" href="@Url.Action("ReportePelisGanancia", "Reportes")">
                                <i class="fas fa-film me-2"></i>Ganancias por Película
                            </a></li>
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Action"].ToString() == "ReporteGenerosMasPopulares" ? "active" : "")" href="@Url.Action("ReporteGenerosMasPopulares", "Reportes")">
                                    <i class="fas fa-theater-masks me-2"></i>Géneros más Populares
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Action"].ToString() == "ReporteVentasDiarias" ? "active" : "")" href="@Url.Action("ReporteVentasDiarias", "Reportes")">
                                    <i class="fas fa-calendar-day me-2"></i>Ventas Diarias
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Action"].ToString() == "ReporteFormatosPreferidos" ? "active" : "")" href="@Url.Action("ReporteFormatosPreferidos", "Reportes")">
                                    <i class="fas fa-tv me-2"></i>Formatos Preferidos
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item mt-5">
                        <a class="nav-link text-danger" href="@Url.Action("Salir", "Acceso")">
                            <i class="fas fa-sign-out-alt"></i> Salir
                        </a>
                    </li>
                </ul>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto admin-content">
                <div class="admin-header">
                    <h2 class="admin-title">@ViewContext.RouteData.Values["Action"].ToString().Replace("Admin", "").Replace("Pelis", "Películas")</h2>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>