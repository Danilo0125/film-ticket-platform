@model ASP_MVC_Prueba.Models.Usuarios
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Confirmar Eliminación
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="AdminUsuarios">Usuarios</a></li>
        <li class="breadcrumb-item active">Confirmar Eliminación</li>
    </ol>

    <div class="alert alert-warning">
        <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>¡Atención!</h4>
        <p>
            El usuario <strong>@Model.NombreCompleto</strong> tiene datos relacionados en el sistema. 
            Eliminar este usuario también eliminará todos los datos asociados.
        </p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-user me-1"></i>
            Información del usuario a eliminar
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5><i class="fas fa-id-card me-2"></i>Detalles del usuario</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th>ID:</th>
                            <td>@Model.Id_Usuarios</td>
                        </tr>
                        <tr>
                            <th>Nombre:</th>
                            <td>@Model.NombreCompleto</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Rol:</th>
                            <td>@(Model.EsAdmin == true ? "Administrador" : "Usuario")</td>
                        </tr>
                        <tr>
                            <th>Fecha de registro:</th>
                            <td>@(Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <h5><i class="fas fa-ticket-alt me-2"></i>Tickets asociados (@Model.Tickets.Count)</h5>
            @if (Model.Tickets != null && Model.Tickets.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID Ticket</th>
                                <th>Película</th>
                                <th>Sala</th>
                                <th>Fecha y Hora</th>
                                <th>Asientos</th>
                                <th>Precio</th>
                                <th>Factura</th>
                                <th>Pago</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model.Tickets)
                            {
                                <tr>
                                    <td>@ticket.Id_Tickets</td>
                                    <td>
                                        @if (ticket.Horario?.Pelicula != null)
                                        {
                                            <span class="badge bg-primary">@ticket.Horario.Pelicula.Titulo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No disponible</span>
                                        }
                                    </td>
                                    <td>
                                        @if (ticket.Horario?.Sala != null)
                                        {
                                            <span>@ticket.Horario.Sala.Nombre</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No disponible</span>
                                        }
                                    </td>
                                    <td>
                                        @if (ticket.Horario != null)
                                        {
                                            @ticket.Horario.FechaHora.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">No disponible</span>
                                        }
                                    </td>
                                    <td>@ticket.Butaca.Numero
                                    <td>$@ticket.Horario.Precio</td>
                                    <td>
                                        @if (ticket.Facturas != null)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-file-invoice-dollar me-1"></i>
                                                @ticket.Facturas.CUF
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin factura</span>
                                        }
                                    </td>
                                    <td>
                                        @if (ticket.Pagos != null)
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-money-bill-wave me-1"></i>
                                                $@ticket.Pagos.Monto (@ticket.Pagos.Estado)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin pago</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="alert alert-danger mt-3">
                    <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Advertencia</h5>
                    <p>Al eliminar este usuario también se eliminarán:</p>
                    <ul>
                        <li><strong>@Model.Tickets.Count tickets</strong> de reservaciones</li>
                        <li><strong>@Model.Tickets.Count(t => t.Facturas != null) facturas</strong> asociadas</li>
                        <li><strong>@Model.Tickets.Count(t => t.Pagos != null) registros de pagos</strong> realizados</li>
                    </ul>
                    <p class="mb-0">Esta acción no se puede deshacer.</p>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Este usuario no tiene tickets asociados.
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="AdminUsuarios" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Cancelar y volver
        </a>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id_Usuarios" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro que desea eliminar este usuario y TODOS sus datos relacionados? Esta acción no se puede deshacer.');">
                <i class="fas fa-trash-alt me-2"></i>Eliminar usuario y todos sus datos
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}
