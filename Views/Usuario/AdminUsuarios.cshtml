@model IEnumerable<ASP_MVC_Prueba.Models.Usuarios>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Administrar Usuarios";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="fas fa-users me-2 text-primary"></i>Administrar Usuarios
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Usuarios</li>
    </ol>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="mb-0">Administra todos los usuarios del sistema</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Agregar usuario
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Lista de usuarios
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-user me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.NombreCompleto)
                            </th>
                            <th>
                                <i class="fas fa-envelope me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                <i class="fas fa-calendar-alt me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.FechaRegistro)
                            </th>
                            <th>
                                <i class="fas fa-user-shield me-2 text-primary"></i>
                                Rol
                            </th>
                            <th>
                                <i class="fas fa-cogs me-2 text-primary"></i>
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-circle fs-4 me-2 text-secondary"></i>
                                    <span class="fw-bold">@item.NombreCompleto</span>
                                </div>
                            </td>
                            <td>@item.Email</td>
                            <td>@(item.FechaRegistro?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>
                                @if(item.EsAdmin == true)
                                {
                                    <span class="badge bg-success">Administrador</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Usuario</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Editar" asp-route-id="@item.Id_Usuarios" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id_Usuarios" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar" 
                                       onclick="return confirm('¿Está seguro que desea eliminar este usuario?');">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    });
</script>
}
