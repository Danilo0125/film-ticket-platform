@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container">
    <div class="error-container fade-in-up">
        <div class="error-icon">
            <i class="fas fa-user-lock"></i>
        </div>
        <h1 class="error-title">Acceso Denegado</h1>
        <p class="error-message">Lo sentimos, pero necesitas iniciar sesión para acceder a esta página. Por favor, inicia sesión para continuar.</p>
        <div class="d-flex gap-3">
            <button id="error-login-btn" class="cc-btn cc-btn-primary">
                <i class="fas fa-user"></i> Iniciar Sesión
            </button>
            <a href="@Url.Action("Index", "Home")" class="cc-btn cc-btn-secondary">
                <i class="fas fa-home"></i> Ir al Inicio
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const loginBtn = document.getElementById('error-login-btn');
            const modalLogin = document.getElementById('login-modal');
            
            if (loginBtn && modalLogin) {
                loginBtn.addEventListener('click', function() {
                    modalLogin.style.display = 'block';
                });
            }
        });
    </script>
}
