<div class="modal-content">
    <span class="close-modal">&times;</span>
    <h2>Registro de Usuario</h2>
    <form id="register-form" method="post">
        @Html.AntiForgeryToken()
        <div id="register-error" class="error-message" style="display: none; color: red; margin-bottom: 15px; padding: 10px; border-radius: 5px; background-color: rgba(255, 0, 0, 0.1);"></div>

        <div class="form-group">
            <label for="NombreCompleto">Nombre Completo:</label>
            <input class="form-control" type="text" id="NombreCompleto" name="NombreCompleto" required minlength="3" maxlength="100">
            <span class="field-validation-error" id="NombreCompleto-error"></span>
        </div>
        
        <div class="form-group">
            <label for="Email">Email:</label>
            <input class="form-control" type="email" id="Email" name="Email" required>
            <span class="field-validation-error" id="Email-error"></span>
        </div>
        
        <div class="form-group">
            <label for="Password">Contraseña:</label>
            <input class="form-control" type="password" id="Password" name="Password" required minlength="6" maxlength="100">
            <span class="field-validation-error" id="Password-error"></span>
        </div>
        
        <div class="form-group">
            <label for="ConfirmPassword">Confirmar Contraseña:</label>
            <input class="form-control" type="password" id="ConfirmPassword" name="ConfirmPassword" required>
            <span class="field-validation-error" id="ConfirmPassword-error"></span>
        </div>
        
        <button type="submit" class="submit-btn">Registrarse</button>
    </form>
</div>