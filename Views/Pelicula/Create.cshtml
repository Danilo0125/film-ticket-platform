@model ASP_MVC_Prueba.Models.Peliculas
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h4 class="text-center mb-4"><i class="fas fa-film me-2"></i>Crear Nueva Película</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data" id="createPeliculaForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Titulo" class="control-label"><i class="fas fa-heading me-1"></i> Título</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-film"></i></span>
                        <input asp-for="Titulo" class="form-control" placeholder="Título de la película" />
                    </div>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Genero" class="control-label"><i class="fas fa-theater-masks me-1"></i> Género</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                        <select asp-for="Genero" class="form-control">
                            <option value="">Seleccione un género</option>
                            <option value="Amor">Amor</option>
                            <option value="Terror">Terror</option>
                            <option value="Ciencia-ficcion">Ciencia Ficción</option>
                            <option value="Animacion">Animación</option>
                        </select>
                    </div>
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Duracion" class="control-label"><i class="fas fa-clock me-1"></i> Duración</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-hourglass-half"></i></span>
                        <input asp-for="Duracion" class="form-control" placeholder="Ej: 120 minutos" />
                    </div>
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Sinopsis" class="control-label"><i class="fas fa-align-left me-1"></i> Sinopsis</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-book-open"></i></span>
                        <textarea asp-for="Sinopsis" class="form-control" rows="3" placeholder="Breve descripción de la película"></textarea>
                    </div>
                    <span asp-validation-for="Sinopsis" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Imagen" class="control-label"><i class="fas fa-image me-1"></i> Imagen</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-upload"></i></span>
                        <input type="file" id="imagenFile" name="imagenFile" class="form-control" accept="image/*" onchange="previewImage()" />
                    </div>
                    <small class="text-muted"><i class="fas fa-info-circle"></i> Se recomienda una imagen de buena calidad en formato JPG o PNG.</small>
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                    
                    <div id="imagePreviewContainer" class="mt-3 text-center d-none">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-eye me-1"></i> Vista previa</h6>
                            </div>
                            <div class="card-body p-2">
                                <img id="imagePreview" class="img-fluid" style="max-height: 300px;" />
                            </div>
                            <div class="card-footer bg-light" id="imageStatus">
                                <i class="fas fa-check-circle text-success"></i> Imagen cargada correctamente
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Trailer" class="control-label"><i class="fas fa-video me-1"></i> Trailer</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fab fa-youtube"></i></span>
                        <input asp-for="Trailer" class="form-control" placeholder="URL del trailer en YouTube" />
                    </div>
                    <span asp-validation-for="Trailer" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label><i class="fas fa-film me-1"></i> Formatos:</label>
                    <div class="d-flex gap-4 mt-2">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input formato-check" id="formato2d" value="2D" />
                            <label class="form-check-label" for="formato2d"><i class="fas fa-tv me-1"></i> 2D</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input formato-check" id="formato3d" value="3D" />
                            <label class="form-check-label" for="formato3d"><i class="fas fa-cube me-1"></i> 3D</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input formato-check" id="formato4d" value="4D" />
                            <label class="form-check-label" for="formato4d"><i class="fas fa-cubes me-1"></i> 4D</label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Formatos" id="formatosValue" />
                </div>
                
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="estrenoCheck" 
                              @(Model?.Estreno == true ? "checked" : "") 
                              onchange="document.getElementById('estrenoValue').value = this.checked;" />
                        <label class="form-check-label" for="estrenoCheck">
                            <i class="fas fa-star me-1 text-warning"></i> ¿Es estreno?
                        </label>
                        <input type="hidden" id="estrenoValue" name="Estreno" value="@(Model?.Estreno == true ? "true" : "false")" />
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="estadoCheck" 
                              checked
                              onchange="document.getElementById('estadoValue').value = this.checked;" />
                        <label class="form-check-label" for="estadoCheck">
                            <i class="fas fa-toggle-on me-1 text-success"></i> Película activa
                        </label>
                        <input type="hidden" id="estadoValue" name="Estado" value="true" />
                        <small class="form-text text-muted d-block">Las películas inactivas no se mostrarán en cartelera.</small>
                    </div>
                </div>
                
                <div class="form-group d-flex justify-content-between mt-4">
                    <a asp-action="AdminPelis" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Película
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <script>
        $(document).ready(function() {
            // When form is submitted, combine format checkboxes into comma-separated string
            $("#createPeliculaForm").on("submit", function(e) {
                // Basic form validation
                if (!$("#Titulo").val()) {
                    showValidationError("Titulo", "El título de la película es obligatorio");
                    e.preventDefault();
                    return false;
                }
                
                if (!$("#Genero").val()) {
                    showValidationError("Genero", "Debe seleccionar un género");
                    e.preventDefault();
                    return false;
                }
                
                if (!$("#Duracion").val()) {
                    showValidationError("Duracion", "Debe especificar la duración");
                    e.preventDefault();
                    return false;
                }
                
                // Combine format checkboxes into comma-separated string
                var selectedFormats = [];
                $(".formato-check:checked").each(function() {
                    selectedFormats.push($(this).val());
                });
                $("#formatosValue").val(selectedFormats.join(","));
            });
            
            // Initialize estreno checkbox if we're editing an existing movie
            if ($("#estrenoValue").val() === "true") {
                $("#estrenoCheck").prop("checked", true);
            }
        });
        
        // Show validation error with FontAwesome icon
        function showValidationError(fieldName, message) {
            var errorSpan = $(`span[data-valmsg-for="${fieldName}"]`);
            if (errorSpan.length === 0) {
                $(`#${fieldName}`).after(`<span class="text-danger" data-valmsg-for="${fieldName}"><i class="fas fa-exclamation-circle"></i> ${message}</span>`);
            } else {
                errorSpan.html(`<i class="fas fa-exclamation-circle"></i> ${message}`);
            }
        }
        
        // Function to preview the selected image
        function previewImage() {
            var fileInput = document.getElementById('imagenFile');
            var previewContainer = document.getElementById('imagePreviewContainer');
            var previewImage = document.getElementById('imagePreview');
            var imageStatus = document.getElementById('imageStatus');
            
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewContainer.classList.remove('d-none');
                    imageStatus.innerHTML = '<i class="fas fa-check-circle text-success"></i> Imagen cargada correctamente';
                }
                
                reader.readAsDataURL(fileInput.files[0]);
            } else {
                previewImage.src = '';
                previewContainer.classList.add('d-none');
            }
        }
        
        // Initialize estado checkbox
        document.getElementById('estadoCheck').addEventListener('change', function() {
            document.getElementById('estadoValue').value = this.checked;
            
            // Change icon and color based on state
            if (this.checked) {
                this.nextElementSibling.querySelector('i').className = 'fas fa-toggle-on me-1 text-success';
            } else {
                this.nextElementSibling.querySelector('i').className = 'fas fa-toggle-off me-1 text-danger';
            }
        });
    </script>
}
